NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_DEFAULT_KEY=sb_publishable_replace_me

# Auth hardening
NEXT_PUBLIC_AUTH_CAPTCHA_ENABLED=true
NEXT_PUBLIC_TURNSTILE_SITE_KEY=replace_me

# Optional MCP relay integration for canvas agent sync
# Default behavior in production is disabled unless this is set to true.
NEXT_PUBLIC_ENABLE_MCP_RELAY=false

# Optional override for relay host/base path.
# Accepted formats: https://app.example.com, wss://app.example.com, https://app.example.com/relay
# Leave blank to use same-origin /canvas-sync and /agent-relay endpoints.
# NEXT_PUBLIC_MCP_RELAY_URL=

# Supabase Function secrets (set in Supabase, not committed in frontend env files)
GITHUB_APP_SLUG=replace_me
GITHUB_APP_ID=replace_me
GITHUB_APP_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nreplace_me\n-----END PRIVATE KEY-----"
APP_PUBLIC_URL=https://your-app-origin.example
OPENAI_API_KEY=replace_me
OPENAI_TRANSCRIPT_MODEL=gpt-5-nano
OPENAI_TRANSCRIPT_TEMPERATURE=default
